{% extends 'base.html.twig' %}

{% block title %}Livre{% endblock %}

{% block body %}
    <h1>{{livre.titre}}</h1>
    <div class="card" style="width: 40rem;margin:auto;">
        <img src="{{livre.image}}" alt="{{livre.titre}}">
        <div class="card-body">
          <h3 class="card-title">{{livre.titre}}</h3>
            <h4>{{livre.auteur.prenom}} {{livre.auteur}} </h4>
          <p class="card-text">{{livre.resume}}</p>
          <p><small><em>{{ livre.dateParution ? livre.dateParution|date('Y-m-d') : '' }} - editeur : {{ livre.edition }}</em></small></p>
          <p>{{ livre.isbn }}</p>
          
        </div>
      </div>
    <table class="table" style="width: 18rem;">
        <tbody>   
            <tr>
                <th>Prix</th>
                <td>{{ livre.prix }} euros</td>
            </tr>
            <tr>
                <th>Langue</th>
                <td>{{ livre.langue }}</td>
            </tr>
            <tr>
                <th>Stock</th>
                <td>{{ livre.stock }} exemplaire</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_livre_index') }}">back to list</a>

    <a href="{{ path('app_livre_edit', {'id': livre.id}) }}">edit</a>

    {{ include('livre/_delete_form.html.twig') }}
{% endblock %}
